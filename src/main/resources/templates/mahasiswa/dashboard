                                                <i class="bi" 
                                                   th:classappend="${p.status == 'PENDING'} ? 'bi-hourglass-split' :
                                                                   ${p.status == 'DITERIMA'} ? 'bi-check-circle' : 'bi-x-circle'"></i>
                                                <span th:text="${p.status}"></span>
                                            </span>
                                            
                                            <!-- Tombol Batalkan jika PENDING -->
                                            <form th:if="${p.status == 'PENDING'}" 
                                                  th:action="@{'/mahasiswa/batalkan/' + ${p.id}}" 
                                                  method="post" 
                                                  class="mt-2"
                                                  onsubmit="return confirm('Yakin ingin membatalkan pendaftaran?')">
                                                <button type="submit" class="btn btn-sm btn-outline-danger w-100">
                                                    <i class="bi bi-x-circle"></i> Batalkan Pendaftaran
                                                </button>
                                            </form>
                                            
                                            <!-- Info jika sudah diterima -->
                                            <div th:if="${p.status == 'DITERIMA'}" class="mt-2">
                                                <small class="text-success">
                                                    <i class="bi bi-check-circle"></i> Anda adalah anggota UKM ini
                                                </small>
                                            </div>
                                            
                                            <!-- Info jika ditolak -->
                                            <div th:if="${p.status == 'DITOLAK'}" class="mt-2">
                                                <small class="text-danger">
                                                    <i class="bi bi-x-circle"></i> Pendaftaran ditolak
                                                </small>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                
                                <!-- Tombol Daftar jika BELUM mendaftar -->
                                <div th:unless="${ukmIdTerdaftar.contains(ukm.id)}">
                                    <!-- Cek apakah kuota UKM sudah penuh -->
                                    <div th:if="${jumlahUkmDiterima >= 2}">
                                        <button class="btn btn-secondary btn-sm w-100" disabled>
                                            <i class="bi bi-lock"></i> Kuota UKM Anda Penuh
                                        </button>
                                        <small class="text-danger d-block mt-2">
                                            Maksimal 2 UKM per mahasiswa
                                        </small>
                                    </div>
                                    
                                    <div th:unless="${jumlahUkmDiterima >= 2}">
                                        <form th:action="@{/mahasiswa/daftar}" method="post">
                                            <input type="hidden" name="ukmId" th:value="${ukm.id}">
                                            <button type="submit" class="btn btn-primary btn-sm w-100">
                                                <i class="bi bi-person-plus"></i> Daftar Sekarang
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
